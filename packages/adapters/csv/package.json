{
  "name": "@csv-arrow-stream/core",
  "version": "1.0.0",
  "description": "High-performance streaming CSV to Apache Arrow converter with automatic schema inference",
  "main": "src/index.js",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./src/index.js",
    "./parser": "./src/parser.js",
    "./converter": "./src/converter.js",
    "./schema": "./src/schema.js",
    "./stream": "./src/stream.js",
    "./utils": "./src/utils.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "echo 'No build step required for ES modules'",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "csv",
    "arrow",
    "apache-arrow",
    "streaming",
    "schema-inference",
    "data-processing",
    "nodejs",
    "performance"
  ],
  "author": "gggauravr@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ggauravr/flightstream.git",
    "directory": "packages/adapters/csv"
  },
  "bugs": {
    "url": "https://github.com/ggauravr/flightstream/issues"
  },
  "homepage": "https://github.com/ggauravr/flightstream#readme",
  "dependencies": {
    "fast-csv": "^5.0.0",
    "apache-arrow": "^14.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ]
}
