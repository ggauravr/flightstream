{
  "name": "@flightstream/monorepo",
  "version": "1.0.0",
  "description": "High-performance Apache Arrow Flight streaming framework with plugin architecture for Node.js",
  "main": "packages/examples/basic-server/index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node packages/examples/basic-server/index.js",
    "dev": "nodemon packages/examples/basic-server/index.js",
    "test": "node packages/examples/test-client/test-client.js",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "clean": "lerna clean",
    "install:all": "npm install",
    "test:all": "lerna run test",
    "test:watch": "lerna run test --parallel --stream",
    "test:coverage": "lerna run test:coverage",
    "test:ci": "lerna run test:ci",
    "test:utils": "lerna run test --scope=@flightstream/utils",
    "test:core": "lerna run test --scope=@flightstream/core",
    "test:csv-service": "lerna run test --scope=@flightstream/csv-service",
    "audit:check": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "version:patch": "lerna version patch",
    "version:minor": "lerna version minor",
    "version:major": "lerna version major",
    "publish": "lerna publish",
    "publish:from-package": "lerna publish from-package",
    "changed": "lerna changed",
    "diff": "lerna diff",
    "list": "lerna list",
    "info": "lerna info"
  },
  "keywords": [
    "arrow",
    "arrow-flight",
    "grpc",
    "streaming",
    "data",
    "csv",
    "apache-arrow",
    "flight-protocol",
    "data-streaming",
    "columnar-data",
    "flightstream"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ggauravr/flightstream.git"
  },
  "bugs": {
    "url": "https://github.com/ggauravr/flightstream/issues"
  },
  "homepage": "https://github.com/ggauravr/flightstream#readme",
  "author": "gggauravr@gmail.com",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "lerna": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.0"
  }
}
