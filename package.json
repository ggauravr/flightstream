{
  "name": "@flightstream/monorepo",
  "version": "1.0.0",
  "description": "High-performance Apache Arrow Flight streaming framework with plugin architecture for Node.js",
  "main": "packages/examples/basic-server/index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node packages/examples/basic-server/index.js",
    "dev": "nodemon packages/examples/basic-server/index.js",
    "test": "node packages/examples/test-client/test-client.js",
    "build": "npm run build --workspaces",
    "lint": "eslint packages/*/src/**/*.js",
    "lint:fix": "eslint packages/*/src/**/*.js --fix",
    "clean": "npm run clean --workspaces",
    "test:watch": "jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --collectCoverageFrom='packages/*/src/**/*.js'",
    "test:ci": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:utils": "npm run test --workspace=packages/utils",
    "test:core": "npm run test --workspace=packages/core",
    "test:csv-service": "npm run test --workspace=packages/csv-service",
    "audit:check": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "version:patch": "npm version patch --workspaces",
    "version:minor": "npm version minor --workspaces",
    "version:major": "npm version major --workspaces"
  },
  "keywords": [
    "arrow",
    "arrow-flight",
    "grpc",
    "streaming",
    "data",
    "csv",
    "apache-arrow",
    "flight-protocol",
    "data-streaming",
    "columnar-data",
    "flightstream"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ggauravr/flightstream.git"
  },
  "bugs": {
    "url": "https://github.com/ggauravr/flightstream/issues"
  },
  "homepage": "https://github.com/ggauravr/flightstream#readme",
  "author": "gggauravr@gmail.com",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  }
}
