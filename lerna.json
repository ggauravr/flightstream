{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "packages": [
    "packages/core/*",
    "packages/adapters/*",
    "packages/frameworks/*",
    "packages/utils/*",
    "packages/tools/*"
  ],
  "command": {
    "version": {
      "allowBranch": ["main", "master"],
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "conventionalGraduate": true,
      "preid": "beta"
    },
    "publish": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/",
      "dist-tag": "latest",
      "preid": "beta"
    }
  },
  "ignoreChanges": [
    "**/*.test.js",
    "**/*.spec.js",
    "**/jest.config.js",
    "**/tests/**",
    "**/docs/**",
    "**/examples/**"
  ]
}
